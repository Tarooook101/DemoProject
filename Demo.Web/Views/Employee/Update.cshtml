@model EmployeeDTO

@{
    ViewData["Title"] = "Update";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Update Employee</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Employee Card</li>

                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                @* method بتفهم فقط : ==> get and post only any theng another that write post *@
                <form asp-controller="Employee" asp-action="Update" method="post" class="form-group">


                    <label asp-for="Name">Employee Name</label>
                    <input type="text" asp-for="Name" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <br />


                    <label asp-for="Salary">Employee Salary</label>
                    <input type="text" asp-for="Salary" class="form-control" asp-for="Salary" />
                    <span asp-validation-for="Salary" class="text-danger"></span>

                    <br />

                    <label asp-for="DepartmentId">Departments</label>
                    <select asp-for="DepartmentId" asp-items="(SelectList)ViewBag.DepartmentList"> </select>

                    <br>>
                    <center>
                        <input type="submit" value="Update" class="btn btn-primary" />
                        <input type="reset" value="Cancle" class="btn btn-primary" />
                    </center>


                </form>

            </div>
        </div>
    </section>
    <!-- /.content -->
</div>



@section JqueryValidation {
    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
