@model EmployeeDTO

@{
    ViewData["Title"] = "Delete";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Delete Employee</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Employee Card</li>

                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                @* method بتفهم فقط : ==> get and post only any theng another that write post *@
                <form asp-controller="Employee" asp-action="Delete" method="post" class="form-group">

                    <h1 class="text-danger">Are you Sure to Delete this Employee : @Model.Name ?</h1>
                    <label asp-for="Name">Employee Name</label>
                    <input type="text" asp-for="Name" class="form-control" asp-for="Name" readonly />
                    <br />


                    <label asp-for="Salary">Employee Code</label>
                    <input type="text" asp-for="Salary" class="form-control" asp-for="Salary" readonly />
                    <br />

                    <center>
                        <input type="submit" value="Delete" class="btn btn-primary" />
                        <input type="reset" value="Cancle" class="btn btn-primary" />
                    </center>

                </form>

            </div>
        </div>
    </section>
    <!-- /.content -->
</div>


